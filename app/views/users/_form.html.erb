<%= form_for :user, url: users_path do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanetion">
          <h2>
            <%= pluralize(@user.errors.count, "error") %> han impedido que el libro sea grabado
          </h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :nombre %>
      <%= f.text_field :nombre %>
    </p>

    <p>
      <%= f.label :correo %>
      <%= f.text_field :correo %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>